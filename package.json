{
  "name": "jest-chrome-fake",
  "version": "0.1.0",
  "description": "Working implementations of Chrome Extension API for use with Jest. Builds on extend-chrome/jest-chrome",
  "keywords": [
    "api",
    "chrome",
    "chromium",
    "extension",
    "jest",
    "mock",
    "test",
    "typescript"
  ],
  "repository": "github:likelylogic/jest-chrome-fake",
  "bugs": "https://github.com/likelylogic/jest-chrome-fake/issues",
  "license": "MIT",
  "author": "Dave Stewart",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "src"
  ],
  "scripts": {
    "build": "run-s build:clean build:pro",
    "build:clean": "rm -rf dist types",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:pro": "rollup -c --environment NODE_ENV:production",
    "build:watch": "npm run build:dev -- -w",
    "postpublish": "rm -rf node_modules package-lock.json && pnpm i",
    "start": "run-p build:watch",
    "xpretest": "npm run build",
    "test": "jest",
    "alias-hq": "alias-hq"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "alias-hq": "^5.1.3",
    "copyfiles": "^2.3.0",
    "eslint": "^7.1.0",
    "eslint-plugin-jest": "^23.13.2",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.11.2",
    "ts-jest": "^26.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "peerDependencies": {
    "jest-chrome": "^0.7.0",
    "jest": "^24.9.0"
  }
}
